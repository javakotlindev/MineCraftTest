<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MineCraftTest" parent="Theme.Design.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseWidgetDesignTabLayout" parent="android:Widget">
        <item name="tabMaxWidth">0dp</item>
        <item name="android:padding">@dimen/margin_padding_4</item>
        <item name="tabTextAppearance">@style/TabItemTextAppearance</item>
        <item name="android:background">@color/whiteOpacity
        </item>
    </style>

    <style name="TabItemTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="fontFamily">@font/jost_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopRight">@dimen/margin_padding_8</item>
        <item name="cornerSizeTopLeft">@dimen/margin_padding_8</item>
    </style>

    <style name="AllCornersShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopRight">@dimen/margin_padding_8</item>
        <item name="cornerSizeBottomLeft">@dimen/margin_padding_8</item>
        <item name="cornerSizeBottomRight">@dimen/margin_padding_8</item>
        <item name="cornerSizeTopLeft">@dimen/margin_padding_8</item>
    </style>
</resources>